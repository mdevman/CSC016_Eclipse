
#include "BigInt.h"

#include <iostream>
using namespace std;



int main()
{
  // conversion constructor with string of digit initialization (see QA)
  string str = "1254213456768432";
  BigInt bi5(str);
	bi5.displayArray();

  // explicit constructor with num of digits
  string str1 = "3452552";
  BigInt bi1(10, str1);
	bi1.displayArray();
  // copy constructors
  BigInt bi2(bi1);
	bi2.displayArray();
  BigInt bi3 = bi1;
	bi3.displayArray();
  // assignment operator
  bi1 = bi2;
	bi1.displayArray();
	bi2.displayArray();

	std::cout << "bi1 == bi2 -> " << bi1 == bi2 << endl;
	std::cout << "bi1 > bi2 -> " << bi1 > bi2 << endl;
	std::cout << "bi5 > bi2 -> " << bi5 > bi2 << endl;

  // IO operations
  cin>>bi2;
	bi2.displayArray();
  cout<<bi1;
	bi2.displayArray();
	//std::cout<<"bi1 = " << bi1.displayArray() << endl;

  // math operations
  //BigInt bi4 = bi1 + bi2 - bi3;
	bi1.displayArray();
	cout << " + " << endl;
	bi2.displayArray();
  //BigInt bi4 = bi1 + bi2;

	//bi4.displayArray();
	bi2.displayArray();
	cout << " - " << endl;
	bi3.displayArray();

	//BigInt bi6 = bi4 - bi3;
	BigInt bi6 = bi2 - bi3;
	bi6.displayArray();

  // relational operations
  if(bi1>bi2)
    cout<<bi1;
  else
    cout<<bi2;

	//~bi1;
	//~bi2;
	//~bi3;
	//~bi4;
	//~bi5;

  return 0;
}

